# Color screen definition for libxvt

# Screen commands

auto-margin	= 1
move-cursor-ti	= "\e[%i%p1%d;%p2%dH"
move-cursor-tc	= "\e[%i%d;%dH"
clear-screen	= "\e[2J"
clear-to-eol	= "\e[K"
clear-to-eos	= "\e[J"
add-line	= "\e[L"
delete-line	= "\e[M"
insert-char	= "\e[@"
delete-char	= "\e[P"

cursor-on	= "\e[?25h"
cursor-off	= "\e[?25l"

title-beg	= "\e]0;"
title-end	= "^G"

alt-chars-ena	= "\e(B\e)0"
session-end	= "\ec"

# Screen attributes

reverse-on	= "\e[7m"
reverse-off	= "\e[m"

bold-on		= "\e[1m"
bold-off	= "\e[m"

underline-on	= "\e[4m"
underline-off	= "\e[m"

alt-char-1-on	= "^N"
alt-char-1-off	= "^O"

# extended cmds

icon-open	= "\e[2t"
icon-close	= "\e[1t"

icon-bits-beg	= "\e_"
icon-bits-end	= "\e\\"

keymap-on	= "\e[?102h"	# set to 101 if you don't want prs/rls info
keymap-off	= "\e[?100l"

mouse-on	= "\e[?1004h"
mouse-off	= "\e[?1004l"
mouse-input	= "\e[M%i%+ %+ %+ "

# Function keys

f1		= "\eOP"
f2		= "\eOQ"
f3		= "\eOR"
f4		= "\eOS"
f5		= "\e[15~"
f6		= "\e[17~"
