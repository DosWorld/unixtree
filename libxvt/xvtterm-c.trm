kp8		= "\e[A"
kp9		= "\e[5~"
delete		= "\e[3~"

shift-press	= "\e[sp!"
shift-release	= "\e[sr!"
ctrl-press	= "\e[cp!"
ctrl-release	= "\e[cr!"
alt-press	= "\e[ap!"
alt-release	= "\e[ar!"

